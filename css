/* ===== LIGHTBOX (ABRIR FOTO AMPLIADA) ===== */
.lightbox {
  display: none;
  position: fixed;
  inset: 0;
  background: rgba(0, 0, 0, 0.85);
  backdrop-filter: blur(8px);
  justify-content: center;
  align-items: center;
  z-index: 999;
  animation: fadeIn 0.4s ease;
}

.lightbox img {
  max-width: 90%;
  max-height: 85%;
  border-radius: 16px;
  box-shadow: 0 0 40px rgba(124, 58, 237, 0.7);
  animation: zoomIn 0.4s ease;
}

.lightbox:target {
  display: flex;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes zoomIn {
  from { transform: scale(0.95); opacity: 0; }
  to { transform: scale(1); opacity: 1; }
}

/* ===== NAVEGAÇÃO COM SETAS NO LIGHTBOX ===== */
