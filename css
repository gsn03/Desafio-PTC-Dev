/* Fundo degradê fixo (parallax leve) */
.layer-solid {
  position: fixed;
  inset: 0;
  background: #2a004d;
  opacity: 0.25;
  mix-blend-mode: lighten;
  z-index: 0;
}

.layer-glow {
  position: fixed;
  inset: 0;
  background: radial-gradient(
    circle at 50% 100%,
    rgba(75, 0, 130, 0.5) 0%,
    rgba(75, 0, 130, 0.25) 30%,
    rgba(0, 0, 0, 0.85) 80%
  );
  mix-blend-mode: screen;
  animation: glow-breathe 10s ease-in-out infinite;
  z-index: 0;
}

@keyframes glow-breathe {
  0%   { transform: scale(1); opacity: 0.85; }
  50%  { transform: scale(1.05); opacity: 0.65; }
  100% { transform: scale(1); opacity: 0.85; }
}

