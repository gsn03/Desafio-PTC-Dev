/* esconder radios */
.tabs input[type="radio"] { display: none; }

/* linha de labels */
.tabs .labels {
  position: relative;
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  width: min(820px, 90vw);
  gap: 0;
  padding-bottom: 10px;
}

/* estilo dos botões — sem borda, só texto */
.tabs label {
  text-align: center;
  padding: 12px 0;
  color: #cbb3ff;
  cursor: pointer;
  user-select: none;
  transition: color 0.25s ease, transform 0.25s ease;
}
.tabs label:hover {
  color: #fff;
  transform: translateY(-2px);
}

/* underline animado com fade e brilho */
.tabs .slider {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 25%; /* 4 abas → 25% cada */
  height: 3px;
  background: linear-gradient(90deg, #6d28d9, #a78bfa);
  border-radius: 999px;
  box-shadow: 0 0 18px rgba(124, 58, 237, .8);
  transform: translateX(0%);
  transition: transform .4s cubic-bezier(.22,1,.36,1), opacity .4s ease;
  animation: slider-glow 2.5s ease-in-out infinite;
}

@keyframes slider-glow {
  0%, 100% { box-shadow: 0 0 12px rgba(124, 58, 237, 0.5); opacity: 0.9; }
  50%      { box-shadow: 0 0 28px rgba(167, 139, 250, 0.9); opacity: 1; }
}

/* aba ativa */
.tabs #tab1:checked ~ .labels label[for="tab1"],
.tabs #tab2:checked ~ .labels label[for="tab2"],
.tabs #tab3:checked ~ .labels label[for="tab3"],
.tabs #tab4:checked ~ .labels label[for="tab4"] {
  color: #fff;
  text-shadow: 0 0 18px rgba(124, 58, 237, .35);
}

/* movimento do underline */
.tabs #tab2:checked ~ .labels .slider { transform: translateX(100%); }
.tabs #tab3:checked ~ .labels .slider { transform: translateX(200%); }
.tabs #tab4:checked ~ .labels .slider { transform: translateX(300%); }

